{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "outDir": "qq_plus",
    "skipLibCheck": true
  },
  "include": ["src", "src/**/*.json", "src/**/*.html"],
  "exclude": ["src/renderer/*.ts"]
}
